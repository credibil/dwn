{
  "protocol": "http://contribution-reward-protocol.xyz",
  "published": true,
  "types": {
    "contribution": {
      "schema": "contribution",
      "dataFormats": [
        "application/json"
      ]
    },
    "reward": {
      "schema": "reward",
      "dataFormats": [
        "application/json"
      ]
    }
  },
  "structure": {
    "contribution": {
      "$actions": [
        {
          "who": "anyone",
          "can": [
            "create",
            "update"
          ]
        }
      ]
    },
    "reward": {
      "$actions": [
        {
          "who": "author",
          "of": "contribution",
          "can": [
            "read"
          ]
        }
      ]
    }
  }
}